<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shahi.electrobekia.Log_Reg_op">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/eb"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="153dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btnselling"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/sell_for_eb"
        android:background="@drawable/circle"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_alignTop="@+id/btnrep"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="21dp" />
    <Button
        android:id="@+id/btnrep"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/repair_center"
        android:background="@drawable/circle"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnrep"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="@string/choose_your_needs"
        android:textColor="#000000"
        android:textSize="20sp"/>


</RelativeLayout>
